package Test;

public class New {

	public static void main(String[] args) {
		String s="WELCOME";
		int half=s.length()/2;
		int sp= s.length()-1;
		for(int i=1;i<=s.length();i++) {
			for(int j=1;j<=sp;j++) 
				System.out.print(" ");
				for(int k=0,a=half;k<i;k++,a++)
				{
					if(a==s.length())
						a=0;
					System.out.print(s.charAt(a));
					
				}
				System.out.println();	
				sp--;
		}

	}

}
